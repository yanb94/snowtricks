{% extends 'base.html.twig' %}

{% block title %}
    Mot de passe oublié - {{parent()}}
{% endblock %}

{% block body %}
    
<div class="container my-cont-user">
    <div class="row">
    	<div class="col-12">
		    <div class="row justify-content-md-center">
		        <div class="my-form-user col-lg-5 col-md-8 col-sm-12 col-12">
		            <div class="col-12 well">
		            	<div class="text-center">
		            		<h1>Mot de passe oublié</h1>
		            		<hr>
		            	</div>
						{{ form_start(form) }}
						    {{ form_row(form.username) }}

						    <div class="text-center">
						    	<button class="btn btn-primary" type="submit">Réinitialisez le mot de passe</button>
						    </div>

						{{ form_end(form) }}
		            </div>
		        </div>
		    </div>
		</div>
    </div>

</div> 

{% endblock %}